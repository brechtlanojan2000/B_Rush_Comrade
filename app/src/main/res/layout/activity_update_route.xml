<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".UpdateRoute">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="412dp"
        android:layout_height="45dp"
        android:background="@drawable/header"
        android:elevation="4dp" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="23dp"
        android:layout_height="25dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_arrow"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/TicketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Update Bus Route"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:translationY="55dp"  />

    <Spinner
        android:id="@+id/updatedDestination"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/input_textbox"
        android:ems="10"
        android:padding="5sp"
        android:paddingStart="20sp"
        android:textSize="16sp"
        android:translationY="140dp" />

    <Spinner
        android:id="@+id/updatedTime"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/input_textbox"
        android:ems="10"
        android:padding="5sp"
        android:paddingStart="20sp"
        android:textSize="16sp"
        android:translationY="150dp" />

    <Spinner
        android:id="@+id/updatedBusDriver"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:background="@drawable/input_textbox"
        android:ems="10"
        android:padding="5sp"
        android:paddingStart="20sp"
        android:textSize="16sp"
        android:translationY="160dp" />

    <Spinner
        android:id="@+id/updatedBusNumber"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp"
        android:background="@drawable/input_textbox"
        android:ems="10"
        android:padding="5sp"
        android:paddingStart="20sp"
        android:textSize="16sp"
        android:translationY="170dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="CANCEL"
            android:translationY="490dp"
            app:backgroundTint="#EC7823" />
        <Button
            android:id="@+id/updateRoute"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="UPDATE"
            android:translationY="490dp"
            app:backgroundTint="#EC7823" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Destination"
        android:textColor="#000000"
        android:textSize="16sp"
        android:translationY="110dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Time"
        android:textColor="#000000"
        android:textSize="16sp"
        android:translationY="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Bus Driver"
        android:textColor="#000000"
        android:textSize="16sp"
        android:translationY="290dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Bus Number"
        android:textColor="#000000"
        android:textSize="16sp"
        android:translationY="380dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>